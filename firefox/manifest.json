{
  "manifest_version": 3,
  "name": "Discord WebP to PNG",
  "description": "Automatically converts Discord ?format=webp images to PNG for easier saving.",
  "version": "1.0",

  "permissions": [],

  "host_permissions": [
    "*://discord.com/*",
    "*://media.discordapp.net/*",
    "*://cdn.discordapp.com/*",
    "*://media.discord.com/*",
    "*://cdn.discord.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://discord.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://media.discordapp.net/*",
        "*://cdn.discordapp.com/*",
        "*://media.discord.com/*",
        "*://cdn.discord.com/*"
      ],
      "js": [
        "media-fix.js"
      ],
      "run_at": "document_start"
    }
  ],


  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "109.0",
      "id": "discord-webp-png@tmafe.com",
        "data_collection_permissions": {
        "required": ["none"]
      }
    }

  }
}
