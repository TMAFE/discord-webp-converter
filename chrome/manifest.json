{
  "manifest_version": 3,
  "name": "Discord WebP to PNG",
  "description": "Automatically converts Discord WEBP images to PNG for easier saving!",
  "version": "1.0",

  "permissions": [],

  "host_permissions": [
    "https://discord.com/*",
    "https://media.discordapp.net/*",
    "https://cdn.discordapp.com/*",
    "https://media.discord.com/*",
    "https://cdn.discord.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://media.discordapp.net/*",
        "https://cdn.discordapp.com/*",
        "https://media.discord.com/*",
        "https://cdn.discord.com/*"
      ],
      "js": ["media-fix.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "icon128.png"
  }
}
